{% extends "template.html" %}
{% import "macros.jinja" as macros %}

{% block title %}
  Reset your account password
{% endblock %}

{% block content %}
  <h1>Reset password</h1>
  <p>
    We received a request to reset your account password. To do this, please
    use the button below to sign in to your account and set a new password.
  </p>
  {{ macros.button("Reset password", "{{ .ConfirmationURL }}") }}
  <p>If you did not make this request, please ignore this email.</p>
{% endblock %}
